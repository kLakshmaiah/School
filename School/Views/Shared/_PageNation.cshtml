           @if(!(bool)@Model.IsFirstPage)
            {
                <li class="page-item"><a disabled="@Model.IsFirstPage" class="page-link hidden"  asp-route-Name="page" asp-route-id="@(Model.CurrentPage-1)">Previous</a></li>
            }     
            
            @for (int i = 1; i <= Model.TotalPages; i++)
            {

                <li class="page-item"><a class="page-link" asp-action="Course" asp-route-Name="page" asp-route-id="@i">@i</a></li>
            }

            @if(!(bool)Model.IsLastPage)
            {
                <li class="page-item"><a class="page-link" disabled="@Model.IsLastPage" asp-route-Name="page" asp-action="Course" asp-route-id="@(Model.CurrentPage+1)">Next</a></li>
            }
           
        </ul>
