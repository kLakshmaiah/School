<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" asp-append-version="true"/>
</head>
<body>
    <header>
        <div class="container">
            <div class="row">
                <nav class="navbar navbar-expand-sm bg-secondary fixed-top navbar-dark">

                    <a class="navbar-brand" asp-controller="School" asp-action="Index">Private School </a>

                    <!-- Links -->
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="School" asp-action="Index">Home</a>
                        </li>


                        <!-- Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="collapse" data-toggle="dropdown">
                                Menu
                            </a>
                            <div class="dropdown-menu  bg-secondary">
                                <a class="dropdown-item" asp-action="Course">Courses</a>
                                <a class="dropdown-item" asp-action="Index" asp-fragment="Students">Students</a>
                                <a class="dropdown-item" asp-action="Index" asp-fragment="trainers">Trainers</a>
                                <a class="dropdown-item" asp-action="Index" asp-fragment="assignments">Assignments</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="School" asp-action="StudentsPerCourse">SchoolsPerCourse</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="School" asp-action="TrainersPerCourse">TrainersPerCourse</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="School" asp-action="AssignmentsPerCourse">AssignmentsPerCourse</a>
                        </li>
                    </ul>
                    <form class="navbar-nav nav-item ml-auto">
                        <a class="nav-link" asp-controller="School" asp-action="AssignmentsPerStudentPerCourse">AssignmentsPerCoursePerSchool</a>
                    </form>
                </nav>
            </div>
        </div>
    </header><br /><br />
    @RenderBody()
    <footer class="footer">

        <p>Copyright &copy; Privvate School Data Management System 2020</p>

    </footer>
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
            integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
            integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s"
            crossorigin="anonymous"></script>
   
  @*  <script src="/lib/jquery/dist/jquery.min.js"></script>*@
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/js/script.js" asp-append-version="true"></script>
  @*  @await RenderSectionAsync("Scripts", required: false)*@
</body>
</html>
